<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivi_langFlag"
        android:src="@drawable/flag_pe"

        android:layout_width="38dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"

        android:adjustViewBounds="true"/>


    <TextView
        android:id="@+id/tviLanguageNameSpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/tviLanguageNameEng"
        android:layout_alignStart="@+id/tviLanguageNameEng"
        android:layout_alignTop="@+id/ivi_langFlag"
        android:adjustViewBounds="true"
        android:text="Curso de Idioma"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tviLanguageNameEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tviLanguageNameSpa"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/ivi_langFlag"
        android:layout_toRightOf="@+id/ivi_langFlag"
        android:adjustViewBounds="true"
        android:text="Language course"
        android:textSize="14sp" />









</RelativeLayout>